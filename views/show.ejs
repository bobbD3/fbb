    <header>
        <div class="container-fluid">
            <div class="row">
                <div class='col-md-6'>

                    <img class="img-fluid blogImg" alt="Responsive image" src="<%= blog.image %>">

                </div>
                <div class='col-md-6'>
                    <div class="img-thumbnail blogPost">
                    
                        <div class='caption-full'>
                            <h1 style=" flex-wrap: wrap" class="shadow blogTopSpase">
                                <%= blog.name %>
                            </h1>
                            <a class="btn btn-general btn-color" href="/blog">Обратно</a>
                            <br><br>
                            <p class="shadow" style="white-space: pre-wrap"><%= blog.description %></p>
                        </div>
                        <div class="container">
                            <div class="row">
        
                                <div class="blogButton ">
                                    <div class="form-group">
                                        <p>
                                            <a class="btn btn-general btn-color" href="/blog">Обратно</a>
                                        </p><br>
                                        <% if(currentUser && currentUser.isAdmin) { %>
                                        <p>
                                            <a class="btn btn-general btn-color"
                                                href="/blog/<%= blog._id%>/edit">Редакция</a>
                                        </p><br>
        
                                        <form style="margin:  7.5%;" id="delete-form"
                                            action="/blog/<%= blog._id %>?_method=DELETE" method="POST">
                                            <button class="btn btn-general btn-color">Изтриии   </button>
                                        </form>
                                        <% } %>
                                    </div>
        
        
                                </div>
                            </div>
                        </div>

                    </div>
                </div>


