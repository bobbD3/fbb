<%- include("partials/header") %>
<br><br><br><br><br><br>
<div class="container">
<h1 style="text-align: center;">Промени Пост: <%= blog.name%></h1>
</div>
<div class="container">
    <div class="row">
        <div style ="width: 70%; margin: 10% auto;">
                <form action="/blog/<%= blog._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control   .bg-light" type="text" name="blog[metadata]" value="<%= blog.metadata %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control   .bg-light" type="text" name="blog[metadataDesc]" value="<%= blog.metadataDesc %>">
                    </div>        
                    <div class="form-group">
                            <input class="form-control   .bg-light" type="text" name="blog[name]" value="<%= blog.name %>">
                    </div>
                    <div class="form-group">
                            <input class="form-control   .bg-light " type="text" name="blog[image]" value="<%= blog.image %>">
                    </div>
                    <div class="form-group">
                            <label for="exampleFormControlTextarea1">Описание</label>
                            <textarea class="form-control   .bg-light" rows="3"  name="blog[description]" value="<%= blog.description %>"><%= blog.description %></textarea>
                    </div>
 
                    <div class="form-group">
                            <button class="btn btn-success btn-block">Submit!</button>
                    </div>

                </form>
                <p>
                        <a class="btn btn-danger btn-block" href="/blog/">Обратно</a>
                        </p>
        </div>

    </div>
     <br>
    
</div>


<%- include("partials/footer") %>


