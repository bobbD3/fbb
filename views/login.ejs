<%- include("partials/header") %>

<br><br>
<div class="container">

        <section class="jumbotron ">

                <h1>Login!</h1>
                <section>
</div>


<div class="container">
        <div class="row">
                <div style="width: 50%; margin: 10% auto; flex-wrap: wrap">
                        <form action="/login" method="POST">
                                <div class="form-group">
                                        <input class="form-control  .bg-light" type='text' name='username'
                                                placeholder="username" minlength="7" maxlength="32">
                                </div>
                                <div class="form-group">
                                        <input class="form-control  .bg-light" type='password' name='password'
                                                placeholder="password" minlength="7" maxlength="32">
                                </div>

                                <div class="form-group">
                                        <button class="btn btn-success btn-block">Submit!</button>
                                </div>

                        </form>
                        <div class="form-group">
                                <a href="/forgot" target="_parent"><button class="btn btn-primary btn-block">Forgot
                                                Password</button></a>
                        </div>
                </div>
        </div>
</div>

