<%- include("partials/header") %>

<div class="container">

<header class="jumbotron ">

        <h1>This is the registration form</h1>

</header>
</div>

<div class="container">
        <div class="row">
            <div style ="width: 40%; margin: 8% auto;">
                    <form action="/register" method="POST">
                        <div class="form-group">
                                <input class="form-control  .bg-light" type='text' name='username' placeholder="username" minlength="7" maxlength="32" required>
                        </div>
                        <div class="form-group">
                                <input class="form-control  .bg-light" type='password' name='password' placeholder="password" minlength="7" maxlength="32" required>
                        </div>        
                        <div class="form-group">
                                <input class="form-control  .bg-light" type="email" name="email" placeholder="email" minlength="7" maxlength="32" required >
                        </div>        
                        <div class="form-group">
                                <input class="form-control  .bg-light" type='password' name='adminCode'  placeholder="AdminCode">
                        </div>
     
                        <div class="form-group">
                                <button class="btn btn-success btn-block">Submit!</button>
                        </div>
    
                    </form>
                </div>
        </div>
</div>

<%- include("partials/footer") %>