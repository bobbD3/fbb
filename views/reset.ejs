<%- include("partials/header") %>
<br><br><br><br><br><br>
<div class="row">
	<div class="col-md-12">
        <form action="/reset/<%= token %>" method="POST">
            <div class="container">
                    <legend>Reset Password</legend>
                    <div class="form-group">
                      <label for="password">New Password</label>
                      <input type="password" name="password" value="" placeholder="New password" autofocus="autofocus" class="form-control" minlength="7" maxlength="32"/>
                    </div>
                    <div class="form-group">
                      <label for="confirm">Confirm Password</label>
                      <input type="password" name="confirm" value="" placeholder="Confirm password" class="form-control" minlength="7" maxlength="32"/>
                    </div>
                    <div class="form-group">
                      <button type="submit" class="btn btn-primary">Update Password</button>
                    </div>
            </div>

		</form>
	</div>
</div>
<%- include("partials/footer") %>